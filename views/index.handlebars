<div class="container">
  <div class="row">
    <div class="col-md-12">
      <img src="../public/assets/img/burger.png" alt="Burger">
    </div> 
  <div class="row">
    <div class="col-md-12">
      <h1 class="title">Eat-Da-Burger!</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Add a burger!</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="newBurger">Burger Name:</label>
          <input type="text" id="newBurger" name="burger_name">
        </div>
      </form>
      <button type="submit">Cook It Up!</button>
    </div>
  </div>
</div>
</form>